<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/unicom_login_bg">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

             <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_marginTop="20dip" android:background="@drawable/unicom_login_header"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里聚集了百万的游戏玩家" android:textColor="#000" android:layout_gravity="center" android:layout_marginTop="10dip" android:textSize="13dip"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dip"
                    android:layout_height="60dip" android:background="@drawable/unicom_login_01" android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:scaleType="fitXY" android:background="@drawable/unicom_login_02" android:layout_marginLeft="3dip"/>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:scaleType="fitXY" android:background="@drawable/unicom_login_03" android:layout_marginLeft="3dip"/>

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:scaleType="fitXY" android:background="@drawable/unicom_login_04" android:layout_marginLeft="3dip" android:layout_marginRight="3dip"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="3dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/unicom_login_08" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:src="@drawable/unicom_login_06" android:scaleType="fitXY" android:layout_marginLeft="3dip"/>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/unicom_login_05" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wo_starting_login_ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dip"
                android:layout_marginRight="46dip"
                android:layout_marginTop="12dip"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_starting_login_name"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:layout_weight="3"
                    android:background="@drawable/wo_input_background"
                    android:hint="用户名"
                    android:maxLength="20"
                    android:paddingLeft="2dip"
                    android:singleLine="true" 
                    />

               <!--   android:imeOptions="flagNoExtractUi" -->
                
                <FrameLayout
                    android:id="@+id/frameLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >

                    <EditText
                        android:id="@+id/et_starting_login_password"
                        android:layout_width="fill_parent"
                        android:layout_height="35dip"
                        android:background="@drawable/wo_input_background"
                        android:hint="密码"
                        android:maxLength="20"
                        android:paddingLeft="2dip"
                        android:singleLine="true" android:password="true"
                       />

                    <FrameLayout
                        android:id="@+id/fm_login_getpassword"
                        android:layout_width="80dip"
                        android:layout_height="32dip" android:layout_gravity="right">

                        <ImageView
                            android:id="@+id/img_login_getpassword"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:src="@drawable/unicom_login_help" android:layout_gravity="right|center" android:layout_marginRight="10dip"/>

                    </FrameLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="46dip" android:layout_marginRight="46dip" android:layout_marginTop="10dip">

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wo_login_select"
                    android:text=" 登 录 "
                    android:textColor="#024d65" android:layout_gravity="left|center"/>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="right">

                    <Button
                        android:id="@+id/bt_login_easy"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/wo_fast_login_select"
                        android:text="一键登录"
                        android:textColor="#024d65" />

                    <Button
                        android:id="@+id/bt_registered"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/wo_fast_login_select"
                        android:text="注册"
                        android:textColor="#024d65" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

   

</FrameLayout>

