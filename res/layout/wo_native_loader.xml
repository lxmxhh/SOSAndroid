<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/unicom_login_bg">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_marginTop="30dip" android:background="@drawable/unicom_login_header"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里聚集了百万的游戏玩家" android:textColor="#000" android:layout_gravity="center" android:layout_marginTop="15dip" android:textSize="13dip"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="15dip" android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="62dip"
                    android:layout_height="62dip" android:background="@drawable/unicom_login_01" android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="62dip"
                    android:layout_height="62dip"
                    android:layout_marginLeft="5dip" android:scaleType="fitXY" android:background="@drawable/unicom_login_02"/>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="62dip"
                    android:layout_height="62dip"
                    android:layout_marginLeft="5dip" android:scaleType="fitXY" android:background="@drawable/unicom_login_03"/>

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="62dip"
                    android:layout_height="62dip"
                    android:layout_marginLeft="5dip" android:scaleType="fitXY" android:background="@drawable/unicom_login_04"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dip">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="62dip"
                    android:layout_height="62dip"
                    android:src="@drawable/unicom_login_05" android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="62dip"
                    android:layout_height="62dip"
                    android:src="@drawable/unicom_login_06" android:layout_marginLeft="5dip" android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="62dip"
                    android:layout_height="62dip"
                    android:src="@drawable/unicom_login_07" android:layout_marginLeft="5dip" android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="62dip"
                    android:layout_height="62dip"
                    android:src="@drawable/unicom_login_08" android:layout_marginLeft="5dip" android:scaleType="fitXY"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

<LinearLayout 
    android:layout_width="274sp"
    android:layout_height="90sp"
    android:background="@drawable/wo_native_loader"
    android:layout_gravity="center"
    android:paddingTop="0sp"
    android:paddingBottom="0sp"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    >
    <ProgressBar
    	android:id="@+id/progress"
    	android:layout_width="48sp"
    	android:layout_height="48sp"
    	android:layout_gravity="center"
    	android:layout_marginLeft="30sp"
    />
    
    <TextView
    	android:textColor="#777"
    	android:layout_height="48sp"
    	android:gravity="center"
		android:layout_gravity="center"
		android:text="@string/of_loading_feint"
		android:textSize="17sp"
		android:layout_width="170sp"
		android:layout_marginTop="2sp"
	/>
    </LinearLayout>

</FrameLayout>

